{
  "name": "oakflowers",
  "license": "ISC",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start-fe": "cd frontend && yarn start",
    "start-be": "cd backend && yarn start",
    "start-prod": "yarn build-fe && cross-env NODE_ENV=test yarn start-be",
    "install-fe": "cd frontend && yarn",
    "install-be": "cd backend && yarn",
    "build-fe": "cd frontend && yarn build",
    "dev": "concurrently --kill-others-on-fail \"yarn start-be\" \"yarn start-fe\"",
    "deploy": "yarn install-fe && yarn build-fe && mv ./frontend/build /var/www"
  },
  "author": "Philip Ekblom",
  "devDependencies": {
    "concurrently": "^4.1.0"
  },
  "dependencies": {
    "cross-env": "^5.2.0"
  }
}
