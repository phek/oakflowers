{
  "name": "oakflowers",
  "license": "ISC",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build-fe": "cd frontend && yarn build",
    "install-all": "yarn && yarn install-be && yarn install-fe",
    "install-fe": "cd frontend && yarn",
    "install-be": "cd backend && yarn",
    "start-fe": "cd frontend && yarn start",
    "start-be": "cd backend && yarn start",
    "dev": "concurrently --kill-others-on-fail \"yarn start-be\" \"yarn start-fe\"",
    "prod": "yarn build-fe && cross-env NODE_ENV=prod yarn start-be",
    "deploy-fe": "yarn install-fe && yarn build-fe && rm -rf /var/www/build && mv ./frontend/build /var/www && service nginx restart",
    "deploy-be": "yarn install-be && forever stopall && forever start backend/index.js",
    "deploy": "yarn deploy-fe && yarn deploy-be"
  },
  "author": "Philip Ekblom",
  "devDependencies": {
    "concurrently": "^4.1.0"
  },
  "dependencies": {
    "cross-env": "^5.2.0"
  }
}
